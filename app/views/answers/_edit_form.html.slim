div id = "answer-#{answer.id}-errors"
= form_with model: [answer], local:false, method: 'patch' do |f|
   = f.label :files
   = f.file_field :files, multiple: true, direct_upload: true, class: 'form-control'
   div id="link"
    = f.fields_for :links do |link_f|
      = render 'shared/link_fields', form: link_f
   p = link_to_add_nested(f, :links, '#link', partial: 'shared/link_fields')
   = f.label :body
   = f.text_area :body, class: 'form-control'
   = f.submit t('.save'), class: 'btn btn-primary mt-1'

